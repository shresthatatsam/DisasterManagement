<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Tabbed Form</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .tab-content {
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .nav-tabs .nav-link.active {
            background-color: #007bff;
            color: white;
        }

        .nav-link {
            border: 1px solid #ddd;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <form id="tab-form">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="personal-tab" data-toggle="tab" href="#victim" role="tab" aria-controls="personal" aria-selected="true">व्यक्तिगत जानकारी</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="location-tab" data-toggle="tab" href="#location" role="tab" aria-controls="location" aria-selected="false">स्थान</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Disaster-tab" data-toggle="tab" href="#Disaster" role="tab" aria-controls="Disaster" aria-selected="false">विपत्ति</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="Image-tab" data-toggle="tab" href="#Image" role="tab" aria-controls="Image" aria-selected="false">फोटो</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="PrintForm-tab" data-toggle="tab" href="#PrintForm" role="tab" aria-controls="PrintForm" aria-selected="false">PrintForm</a>
                </li>
            </ul>
            <div class="tab-content mt-3" id="myTabContent">
                <!-- Personal Info Tab -->
                <div class="tab-pane fade show active" id="victim" role="tabpanel" aria-labelledby="personal-tab">
                    @await Html.PartialAsync("../Victim/Index")
                </div>

                <!-- Location Info Tab -->
                <div class="tab-pane fade" id="location" role="tabpanel" aria-labelledby="location-tab">
                    @await Html.PartialAsync("../Location/Index")
                </div>

                <!-- Disaster Info Tab -->
                <div class="tab-pane fade" id="Disaster" role="tabpanel" aria-labelledby="Disaster-tab">
                    @await Html.PartialAsync("../Disaster/Index")
                </div>

                <!-- Image Upload Tab -->
                <div class="tab-pane fade" id="Image" role="tabpanel" aria-labelledby="Image-tab">
                    @await Html.PartialAsync("../Image/Index")
                </div>
                <div class="tab-pane fade" id="PrintForm" role="tabpanel" aria-labelledby="PrintForm-tab">
                    @await Html.PartialAsync("../PrintForm/Index")
                </div>
            </div>
        </form>
    </div>

    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

