<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Upload Form</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .form-group {
            margin-bottom: 1rem;
        }

        .image-preview {
            max-width: 100px;
            height: auto;
            margin-top: 0;
        }

        .image-preview-container {
            display: flex;
            flex-wrap: wrap;
        }

            .image-preview-container img {
                margin: 5px;
            }
    </style>
</head>
<body>
    <div class="container mt-4">
        <h2>छविहरू अपलोड गर्नुहोस्</h2>
        <form id="image-form" method="post" enctype="multipart/form-data">
            <div id="dynamicFields">
                <!-- Initial form group -->
                <div class="form-group" id="form-group-1">
                    <label for="photos-1">फोटोहरू</label>
                    <div class="row">
                        <div class="col-md-6">
                            <input type="file" class="form-control-file" id="photos-1" name="Photos" multiple>

                        </div>
                        <div class="col-md-6">
                            <div id="imagePreview-1" class="image-preview-container"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label for="description">Description</label>
                <input type="text" id="description" name="Description" class="form-control">
            </div>
         
            @* <button type="button" class="btn btn-primary" id="addButton">Add More</button> *@
            @* <button type="button" class="btn btn-primary" id="submit_Image">Submit</button> *@

            @* <button type="button" class="btn btn-primary" id="addButton">थप्नुहोस्</button> *@

            <button type="button" class="btn btn-primary" id="submit_Image" href="@Url.Action("Index", "VictimProfile")">पेश गर्नुहोस्</button>

        </form>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            let formCounter = 1;

            // function createFormGroup(counter) {
